<mvsim_world version="1.0">
    <!-- General simulation options -->
    <simul_timestep>0</simul_timestep> <!-- Simulation fixed-time interval for numerical integration [seconds] or 0 to autodetermine -->    <!-- GUI options -->
    <gui>
        <ortho>false</ortho>
        <show_forces>true</show_forces>  <force_scale>0.01</force_scale>
        <cam_distance>35</cam_distance>
        <fov_deg>60</fov_deg>
        <refresh_fps>20</refresh_fps>
        <!-- <follow_vehicle>r1</follow_vehicle> -->
    </gui>    <!-- Light parameters -->
    <lights>
    </lights>    <!-- ========================
           Scenario definition
         ======================== -->
    <!-- ground -->
    <element class="horizontal_plane">
        <cull_face>BACK</cull_face>
        <x_min>-20</x_min>
        <y_min>-20</y_min>
        <x_max> 20</x_max>
        <y_max> 20</y_max>
        <z>0.0</z>
    </element>    <!-- ground grid (for visual reference) -->
    <element class="ground_grid">
        <!--<floating>true</floating>-->
    </element>    <!-- =============================
           Vehicle classes definition
         ============================= -->
    <include file="../definitions/ackermann.vehicle.xml" />
    <include file="../definitions/small_robot.vehicle.xml" />
    <include file="../definitions/jackal.vehicle.xml"
        default_sensors="false"
    />
    <!-- ========================
           Vehicle(s) definition
         ======================== -->
    <vehicle name="r1" class="jackal">
        <init_pose>0 0 0</init_pose>  <!-- In global coords: x,y, yaw(deg) -->
        <init_vel>0 0 0</init_vel>  <!-- In local coords: vx,vy, omega(deg/s) -->        <!-- Sensors -->
    </vehicle>    <vehicle name="r2" class="jackal">
        <init_pose>1 1 0</init_pose>  <!-- In global coords: x,y, yaw(deg) -->
        <init_vel>0 0 0</init_vel>  <!-- In local coords: vx,vy, omega(deg/s) -->        <!-- Sensors -->
    </vehicle>    <!-- ======================================
          Obstacle blocks classes definition
         ====================================== -->    <block:class name="wall">
        <mass>0</mass>
        <color>#888888
</color>
        <zmin>0</zmin>
        <zmax>1</zmax>
        <ground_friction>1.0</ground_friction>
    </block:class>
    <block class="wall" name="bottom_wall">
        <!-- Pose set to the center of the wall -->
        <init_pose>2.5 0.05 0</init_pose>
        <shape>
            <!-- Relative coordinates: width=5m, thickness=0.1m -->
            <pt>-2.5 -0.05</pt>
            <pt>2.5 -0.05</pt>
            <pt>2.5 0.05</pt>
            <pt>-2.5 0.05</pt>
        </shape>
    </block>    <!-- Top wall: spans x from 0 to 5, inner face at y=5 -->
    <block class="wall" name="top_wall">
        <init_pose>2.5 4.95 0</init_pose>
        <shape>
            <pt>-2.5 -0.05</pt>
            <pt>2.5 -0.05</pt>
            <pt>2.5 0.05</pt>
            <pt>-2.5 0.05</pt>
        </shape>
    </block>    <!-- Left wall: spans y from 0 to 5, inner face at x=0 -->
    <block class="wall" name="left_wall">
        <init_pose>0.05 2.5 0</init_pose>
        <shape>
            <!-- For a 5m tall wall: height along y -->
            <pt>-0.05 -2.5</pt>
            <pt>0.05 -2.5</pt>
            <pt>0.05 2.5</pt>
            <pt>-0.05 2.5</pt>
        </shape>
    </block>    <!-- Right wall: spans y from 0 to 5, inner face at x=5 -->
    <block class="wall" name="right_wall">
        <init_pose>4.95 2.5 0</init_pose>
        <shape>
            <pt>-0.05 -2.5</pt>
            <pt>0.05 -2.5</pt>
            <pt>0.05 2.5</pt>
            <pt>-0.05 2.5</pt>
        </shape>
    </block>    <!-- Interior Wall: Split along x = 3 -->
    <!-- Lower segment: from y=0 to y=2.1 -->
    <block class="wall" name="interior_wall_lower">
        <init_pose>3 1.05 0</init_pose>
        <shape>
            <!-- 2.1m long (half-length = 1.05), 0.1m thick -->
            <pt>-0.05 -1.05</pt>
            <pt>0.05 -1.05</pt>
            <pt>0.05 1.05</pt>
            <pt>-0.05 1.05</pt>
        </shape>
    </block>    <!-- Upper segment: from y=2.9 to y=5 -->
    <block class="wall" name="interior_wall_upper">
        <init_pose>3 3.95 0</init_pose>
        <shape>
            <pt>-0.05 -1.05</pt>
            <pt>0.05 -1.05</pt>
            <pt>0.05 1.05</pt>
            <pt>-0.05 1.05</pt>
        </shape>
    </block>
</mvsim_world>
